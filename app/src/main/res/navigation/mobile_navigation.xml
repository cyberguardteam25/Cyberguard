<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.cyberguard.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_history"
        android:name="com.cyberguard.ui.history.HistoryFragment"
        android:label="@string/menu_history"
        tools:layout="@layout/fragment_history"/>

    <fragment
        android:id="@+id/nav_ai"
        android:name="com.cyberguard.ui.ai.ChatFragment"
        android:label="@string/menu_ai"
        tools:layout="@layout/activity_chat_popup"/>

    <fragment
        android:id="@+id/nav_settings"
        android:name="com.cyberguard.ui.settings.SettingsFragment"
        android:label="@string/menu_settings"
        tools:layout="@layout/settings_fragment"/>

    <fragment
        android:id="@+id/tool1Fragment"
        android:name="com.cyberguard.ui.home.tool1.Tool1Fragment"
        android:label="@string/tool1"
        tools:layout="@layout/fragment_tool1" />

    <fragment
        android:id="@+id/tool2Fragment"
        android:name="com.cyberguard.ui.home.tool2.Tool2Fragment"
        android:label="@string/tool2"
        tools:layout="@layout/fragment_tool2" />

    <fragment
        android:id="@+id/nav_awareness"
        android:name="com.cyberguard.ui.awareness.AwarenessNavigation"
        android:label="@string/menu_awareness"
