        android:id="@+id/tool4Fragment"
        android:name="com.cyberguard.ui.home.tool4.Tool4Fragment"
        android:label="@string/tool4"
        tools:layout="@layout/fragment_tool4" />

    <fragment
        android:id="@+id/nav_about"
        android:name="com.cyberguard.ui.settings.about.AboutFragment"
        android:label="@string/menu_about"
        tools:layout="@layout/fragment_about" />

    <fragment
        android:id="@+id/darkModeFragment"
        android:name="com.cyberguard.ui.settings.darkmode.DarkModeFragment"
        android:label="@string/dark_mode"
        tools:layout="@layout/fragment_dark_mode" />

    <fragment
        android:id="@+id/nav_account"
        android:name="com.cyberguard.ui.settings.account.AccountFragment"
        android:label="@string/account"
        tools:layout="@layout/fragment_account" />

    <fragment
        android:id="@+id/nav_device"
        android:name="com.cyberguard.ui.settings.device.DeviceFragment"
        android:label="@string/device"
        tools:layout="@layout/fragment_device" />





</navigation>